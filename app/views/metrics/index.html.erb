<h1>Enforcement and Judicial Accountability Metrics</h1>
<script>
    var legendBuilt = false;
    var color = d3.scale.ordinal()
            .range(["#57C3C0", "#57A2C3", "#C3578F", "#C38A57", "#8D8D8D", "#20AF32"]);
    var width = 300,
            height = 300,
            radius = Math.min(width, height) / 2;
    var arc = d3.svg.arc()
            .outerRadius(radius - 10)
            .innerRadius(radius - 80);
    $.ajax({
        type: "GET",
        url: "<%= Global.api %>Kpi/Municipality/Names",
        dataType: "json",
        contentType: "application/json; charset=UTF-8",
        success: function (data) {
			console.log("success");
            data.forEach(function(stringName) {
                doThing(stringName, "VehicleStops");
            })
        }
    });
    function doThing(place, typeOfThing) {
        var pie = d3.layout.pie()
                .sort(null)
                .value(function(d) { return d.thing1; });
        return $.ajax({
            type: "POST",
            url: "<%= Global.api %>Kpi/Municipality/" + typeOfThing,
            data: place,
            dataType: "json",
            contentType: "application/json; charset=UTF-8",
            success: function (data) {
                data = data.slice(1, data.size);
                var shouldAttemptDisplay = false;
                data.forEach(function (d) {
                    d.thing1 = d.thing1.replace(',', '');
                    if (d.thing1 != "") shouldAttemptDisplay = true;
                    d.thing1 = Number(d.thing1.replace(',', ''));
                });
                color.domain(d3.keys(data));
                data.forEach(function (d) {
                    d.thing1 = +d.thing1;
                });
                if (!legendBuilt) {
                    legendBuilt = true;
                    var legend = d3.select("div").insert("svg", ":first-child")
                            .attr("class", "legend")
                            .attr("width", 100)
                            .attr("height", 100)
                            .style("background", "rgba(255, 255, 255, .6)")
                            .selectAll("g")
                            .data(pie(data))
                            .enter().append("g")
                            .attr("transform", function (d, i) {
                                return "translate(0," + i * 20 + ")";
                            });
                    legend.append("rect")
                            .attr("width", 18)
                            .attr("height", 18)
                            .style("fill", function (d) {
                                return color(d.data.thing0);
                            });
                    legend.append("text")
                            .attr("x", 24)
                            .attr("y", 9)
                            .attr("dy", ".35em")
                            .text(function (d) {
                                return d.data.thing0;
                            });
                }
                if (shouldAttemptDisplay) {
                    var svg = d3.select("body").append("svg")
                            .attr("width", width)
                            .attr("height", height)
                            .append("g")
                            .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");
                    var g = svg.selectAll(".arc")
                            .data(pie(data))
                            .enter().append("g")
                            .attr("class", "arc");
                    g.append("path")
                            .attr("d", arc)
                            .style("fill", function (d) {
                                return color(d.data.thing0);
                            });
                    g.append("text")
                            .attr("dy", ".35em")
                            .style("text-anchor", "middle")
                            .text(function (d) {
                                return place;
                            });
                }
            }
        })
    }
</script>
